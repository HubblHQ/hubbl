<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Hubbl.Mobile.Pages.NicknamePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <TableView Margin="0,60,0,0"
                   HasUnevenRows="True"
                   Intent="Settings">
            <TableSection>
                <ViewCell>
                    <ContentView>
                        <StackLayout Margin="0,20">
                            <Label HorizontalOptions="Center" Text="Ваше имя в сети" />
                            <Label HorizontalOptions="Center" Text="{Binding Username}" />
                            <Button ContentLayout="Top,0"
                                    HorizontalOptions="Center"
                                    Text="Выбрать другое">
                                <Button.Image>
                                    <OnPlatform x:TypeArguments="FileImageSource" iOS="reloadblue.png" />
                                </Button.Image>
                            </Button>
                            <Label Grid.Row="3"
                                   FontSize="Micro"
                                   HorizontalOptions="Center"
                                   Text="Всегда можно его изменить"
                                   TextColor="Silver" />
                        </StackLayout>
                    </ContentView>
                </ViewCell>
            </TableSection>
            <TableSection>
                <TextCell StyleId="disclosure" Text="Привязанные аккаунты" />
            </TableSection>
            <TableSection>
                <TextCell StyleId="disclosure" Text="Сведения о разработчиках" />
                <TextCell StyleId="disclosure" Text="Правовая информация" />
            </TableSection>
        </TableView>
    </ContentPage.Content>

